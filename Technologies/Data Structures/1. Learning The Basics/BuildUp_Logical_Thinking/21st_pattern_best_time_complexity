#include <iostream>
using namespace std;

void getStarPattern(int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            // Print '*' for the border, otherwise print a space
            cout << ((i == 0 || i == n - 1 || j == 0 || j == n - 1) ? '*' : ' ');
        }
        cout << endl; // Move to the next line after each row
    }
}
